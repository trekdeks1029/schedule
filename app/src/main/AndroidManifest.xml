<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.domain.train">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_MODELS"
            android:value="
            com.domain.train.models.City,
            com.domain.train.models.Station" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="train.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="3" />
        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.domain.train"
            android:enabled="true"
            android:exported="false">
        </provider>
        <activity
            android:name=".ui.activity.main.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.schedule.SelectStationActivity"
            android:theme="@style/AppThemeDark"
            android:parentActivityName=".ui.activity.main.MainActivity">

        </activity>

    </application>
</manifest>
